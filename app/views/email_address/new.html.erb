<%= form_for @email_address, url: '/email_address/', :remote => true do |f| %>

  <%= f.hidden_field :contact_info_id, :value => @contact_info.id %>

  <div class="row">
    <div class="span2"><%= f.label :value %></div>
    <div class="span10">
      <%= f.text_field :value, {:style => "width:300px"} %>
    </div>
  </div>
  <div class="row">
    <div class="span3"></div>
    <div class="span3">
      <button type="button" id="submit<%= get_contact_info_for %>-email-address-form" class="btn btn-primary ajax">
        Add
      </button>
    </div>
  </div>
<% end %>
