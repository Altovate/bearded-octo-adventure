<% partials = %w[quoter_pane quotes_pane lead_pane] %>
<div class=row style='margin: 32px;'>
  <% partials.each do |partial| %>
    <%= content_tag :button, class:"btn pull-left", 'data-show' => "#quote-template>##{partial}", 'data-hide' => '#quote-template>div' do %>
      <%= partial %>
    <% end %>
  <% end %>
</div>

<div id='quote-template'>
  <div id='quoter_pane'><%= render 'quoter_pane' %></div>
  <div id='quotes_pane' class='hide'></div>
  <div id='lead_pane' class='hide'></div>
</div>

<script type='text/template' id='quotes-pane-template'>
  <%= render 'quotes_pane_template' %>
</script>

<script>$(function(){onQuoterFormLoad()});</script>
<script>$(function(){addInputMirrorBehaviour("#quoter_pane")});</script>