<%= render :partial => "shared/tab/reporting", :locals => {:selected => "Searches"} %>
<div style="background-color:#fff; height:500px">
<div class="navbar">
    <div class="navbar-inner"><h4 style="color:black">Searches</h4></div>
</div>
<div style="float:left; width:175px;">
  <br /><br /><br /><i class="icon-plus-sign icon-blue"></i>
  <%= link_to "New Search Record", new_reporting_search_path, :remote => true   %> 
</div>
<div id="tag_keys" style="float:right; background-color:#d9deec; color:#000; width:80%; height:435px; overflow: auto;  ">
  &nbsp;&nbsp;<b>Searches</b>
<%= form_for(@reporting_search, :remote => true) do |f| %>
  <% if @reporting_search.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reporting_search.errors.count, "error") %> prohibited this reporting_search from being saved:</h2>

      <ul>
      <% @reporting_search.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <tr class="field">
    <td style="width:10%"></td>
    <td>Search Name:</td>
    <td><%= f.text_field "name", :value => @copy_search.try(:name) %></td><br />
	</tr>
	<tr class="field">
	    <td style="width:10%"></td>
	    <td>Search Query:</td>
	    <td><%= f.text_area "query", :value => @copy_search.try(:query), :rows => 4 %></td>
		</tr>
		
  <div class="actions"><br />
    <%= f.submit %>
<% end %>
  </div>
  <br />
<%= link_to "Show Results |", results_reporting_search_path(:id => params[:id]), :remote => true   if params[:id] %>
<%= link_to "Back", reporting_searches_path, :remote => true   %>
<zdiv id="query_results"></div>
 </div></div>
