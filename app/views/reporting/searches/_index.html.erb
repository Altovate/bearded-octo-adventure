<%= render :partial => "shared/tab/reporting", :locals => {:selected => "Searches"} %>
<div style="background-color:#fff; height:500px">
<div class="navbar">
    <div class="navbar-inner"><h4 style="color:black">Searches</h4></div>
</div>
<div style="float:left; width:175px;">
  <br /><br /><br /><i class="icon-plus-sign icon-blue"></i>
  <%= link_to "New Search Record", new_reporting_search_path, :remote => true   %><br />
  <i class="icon-plus-sign icon-blue"></i> 
  <%= link_to "New Legacy Search", legacy_new_reporting_searches_path, :remote => true   %> 
</div>
<div id="tag_keys" style="float:right; background-color:#d9deec; color:#000; width:80%; height:435px; overflow: auto;  ">
  &nbsp;&nbsp;<b>Searches</b>
  <% @reporting_searches.each do |reporting_search| %>
    <ul>
      <li>
	<% if reporting_search.editable?(current_user) %>
    <i class="icon-edit"></i>
      <%= link_to reporting_search.name, edit_reporting_search_path(reporting_search.id), :remote => true %>|
      <%= link_to "Destroy", reporting_search, :method => :delete, :remote => true %>
    <% else %>
      <%= link_to reporting_search.name, reporting_search_path(reporting_search.id), :remote => true %>
    <% end %>
    <% if @reporting_membership.custom_reports_privilege %>  
      <%= link_to "Copy", new_reporting_search_path(:id => reporting_search.id ), :remote => true   %>     
    <% end %>       
      </li>
    </ul>
  <% end %><br />
 </div></div>
