<%= render :partial => "shared/tab/system_management", :locals => {:selected => "tagging"} %>
<div style="background-color:#fff; height:500px">
<div class="row title-row">
	<div class="navbar-inner"><h4 class="title system-management-row">Tagging</h4></div>
</div>
<div style="float:left; width:175px;">
	&nbsp;&nbsp;<b>Tags</b>
	<%= form_tag search_tagging_tags_path, :remote => true do %>
		<div class="input-prepend" style="float:left">
		  <span class="add-on" style = "float: left;",><i class="icon-tag"></i></span>
		  <%= text_field_tag "search_tag",  nil, {:class => "span7", :id => "prependedInput", :style => "float: left;", :placeholder => "Search...."} %>
		  <%= submit_tag "go", :class => "btn btn-primary", :style => "float: left;", :id => "submit"%>
		</div>        		  
	<% end %>
<br /><br />
&nbsp;
<ul class="nav nav-list" style="color:black">
  <li class="nav-header">Tags</li>  
  <% @tags.each do |tag| %>
    <li>
	<%= link_to "#{tag.tag_key.name}", tagging_tags_path(:id => tag.tag_key.id), :remote => true   %> 
	  </li>
  <% end %>
<br/><br/>
<% if !params[:user_id].blank? %>
  <%= link_to new_tagging_tag_path(:user_id => params[:user_id]), :remote => true  do %>
    <i class="icon-plus-sign icon-blue">&nbsp;New Tag</i>
  <% end %>
<% else %>
  <%= link_to new_tagging_tag_path(:connection_id => params[:connection_id]), :remote => true  do %>
    <i class="icon-plus-sign icon-blue">&nbsp;New Tag</i>
  <% end %>
<% end %>
</ul>
</div>

<div id="tag_keys" style="float:right; background-color:#d9deec; color:#000; width:80%; height:435px; overflow: auto;  ">
	
</div>
 </div>