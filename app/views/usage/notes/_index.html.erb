<div class="row">
  <div class="span4">
    <h4>Notes</h4>
  </div>
  <div class="span8">
    <div class="pull-right">
      <a id="new-note-usage-modal-pop-up" role="button" class="btn btn-primary ajax" data-user-id="<%= @usage_user.id %>">
        Create note
      </a>
    </div>
  </div>
</div>
<input type="hidden" value="<%= @usage_user.id %>" id="usage-note-user-id">

<% @usage_notes.each do |note|%>
  <div class="accordion">
    <div class="accordion-group">
      <div class="accordion-heading" style="background-color: #9EEDDC;">
        <a class="accordion-toggle" data-toggle="collapse" href="#collapse<%= note.id %>">
          <div class="row" style="margin-left:0px;">
            <div class="span4"><%= note.creator.try(:full_name) %></div>
            <div class="span4"><%= note.created_at %></div>
            <div class="span4">
              <a id="edit-note-usage-modal-pop-up" role="button" data-user-id="<%= @usage_user.id %>" class="btn btn-primary ajax" data-note-id="<%= note.id %>">
                Edit
              </a>
              <a id="delete-usage-note" class="btn btn-primary ajax" data-note-id="<%= note.id %>">
                Delete
              </a>
            </div>
        </a>
      </div>
      <div id="collapse<%= note.id %>" class="accordion-body collapse" style="height: 0px; ">
        <div class="accordion-inner">
          <%= sanitize(note.body) %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div id="modal-container-for-add-edit-usage-note" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="color:black;">
</div>
